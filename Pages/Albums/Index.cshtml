@page  "{id:int?}"
@model MusicStore.Pages.Albums.IndexModel

@{
    ViewData["Title"] = "Index";
}

<h1>Index</h1>

<p>
    <a asp-page="Create">Create New</a>
</p>
<table class="table">
    <thead>
        <tr>
            <th>
                @Html.DisplayNameFor(model => model.Album[0].Title)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Album[0].Artist)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Album[0].Price)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Album[0].ReleaseDate)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Album[0].RecordLabel.RecordLabelName)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Album[0].AlbumGenres)
            </th>

            <th></th>
        </tr>
    </thead>
    <tbody>
        @foreach (var item in Model.AlbumD.Albums)
        {
            string selectedRow = "";
            if (item.ID == Model.AlbumID)
            {
                selectedRow = "table-success";
            }
                <tr class="@selectedRow">
                    <td>
                        @Html.DisplayFor(modelItem => item.Title)
                    </td>
                    <td>
                        @Html.DisplayFor(modelItem => item.Artist)
                    </td>
                    <td>
                        @Html.DisplayFor(modelItem => item.Price)
                    </td>
                    <td>
                        @Html.DisplayFor(modelItem => item.ReleaseDate)
                    </td>
                    <td>
                        @Html.DisplayFor(modelItem => item.RecordLabel.RecordLabelName)
                    </td>
                    <td>
                        @{
                            foreach (var genre in item.AlbumGenres)
                            {
                                @genre.Genre.ID @: @genre.Genre.GenreName <br />
                            }
                        }
                    </td>
                    <td>
                        <a asp-page="./Edit" asp-route-id="@item.ID">Edit</a> |
                        <a asp-page="./Details" asp-route-id="@item.ID">Details</a> |
                        <a asp-page="./Delete" asp-route-id="@item.ID">Delete</a>
                    </td>
                </tr>
            }
        </tbody>
</table>
